---
/**
 * 太阳系动画组件 - CSS动画版
 */
---

<div class="solar-system-wrapper">
    <div class="stars"></div>
    <div class="solar-system" id="solar-system">
        <div class="sun" id="sun"></div>
        <div class="orbit orbit-mercury"><div class="planet mercury"></div></div>
        <div class="orbit orbit-venus"><div class="planet venus"></div></div>
        <div class="orbit orbit-earth"><div class="planet earth"></div></div>
        <div class="orbit orbit-mars"><div class="planet mars"></div></div>
        <div class="orbit orbit-jupiter"><div class="planet jupiter"></div></div>
        <div class="orbit orbit-saturn"><div class="planet saturn"></div></div>
    </div>
</div>

<style>
.solar-system-wrapper {
    width: 100%;
    height: 300px;
    position: relative;
    overflow: hidden;
    background: linear-gradient(to bottom, rgba(0,0,20,0.2), rgba(0,0,40,0.5));
    border-radius: 1rem;
    margin-bottom: 1rem;
}
.stars {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background-image: 
        radial-gradient(1px 1px at 20px 30px, white, transparent),
        radial-gradient(1px 1px at 80px 60px, white, transparent),
        radial-gradient(1px 1px at 140px 90px, white, transparent),
        radial-gradient(1px 1px at 200px 40px, white, transparent);
    background-size: 250px 150px;
}
.solar-system {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 280px;
    height: 280px;
    margin-left: -140px;
    margin-top: -140px;
}
.sun {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 24px;
    height: 24px;
    margin-left: -12px;
    margin-top: -12px;
    background: radial-gradient(circle, #fff700, #ff9500, #ff5500);
    border-radius: 50%;
    box-shadow: 0 0 20px #ff9500;
    z-index: 10;
}
.orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    border: 1px dashed rgba(255,255,255,0.15);
    border-radius: 50%;
    animation: orbit-rotate linear infinite;
}
.orbit-mercury { width: 50px; height: 50px; margin-left: -25px; margin-top: -25px; animation-duration: 4s; }
.orbit-venus { width: 80px; height: 80px; margin-left: -40px; margin-top: -40px; animation-duration: 6s; }
.orbit-earth { width: 115px; height: 115px; margin-left: -57.5px; margin-top: -57.5px; animation-duration: 8s; }
.orbit-mars { width: 150px; height: 150px; margin-left: -75px; margin-top: -75px; animation-duration: 12s; }
.orbit-jupiter { width: 195px; height: 195px; margin-left: -97.5px; margin-top: -97.5px; animation-duration: 18s; }
.orbit-saturn { width: 250px; height: 250px; margin-left: -125px; margin-top: -125px; animation-duration: 25s; }

.planet {
    position: absolute;
    border-radius: 50%;
    z-index: 5;
}
.mercury { width: 5px; height: 5px; background: #b5b5b5; top: -2.5px; left: 50%; margin-left: -2.5px; }
.venus { width: 8px; height: 8px; background: #ffd699; top: -4px; left: 50%; margin-left: -4px; }
.earth { width: 10px; height: 10px; background: #6b93d6; top: -5px; left: 50%; margin-left: -5px; }
.mars { width: 6px; height: 6px; background: #e27b58; top: -3px; left: 50%; margin-left: -3px; }
.jupiter { width: 14px; height: 14px; background: linear-gradient(135deg, #d4a574, #c88b3a); top: -7px; left: 50%; margin-left: -7px; }
.saturn { width: 12px; height: 12px; background: #f4d59e; top: -6px; left: 50%; margin-left: -6px; }

@keyframes orbit-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

@media (min-width: 769px) {
    .solar-system-wrapper { height: 350px; }
    .solar-system { width: 400px; height: 400px; margin-left: -200px; margin-top: -200px; }
    .sun { width: 32px; height: 32px; margin-left: -16px; margin-top: -16px; }
    .orbit-mercury { width: 70px; height: 70px; margin-left: -35px; margin-top: -35px; }
    .orbit-venus { width: 110px; height: 110px; margin-left: -55px; margin-top: -55px; }
    .orbit-earth { width: 160px; height: 160px; margin-left: -80px; margin-top: -80px; }
    .orbit-mars { width: 210px; height: 210px; margin-left: -105px; margin-top: -105px; }
    .orbit-jupiter { width: 275px; height: 275px; margin-left: -137.5px; margin-top: -137.5px; }
    .orbit-saturn { width: 350px; height: 350px; margin-left: -175px; margin-top: -175px; }
    .mercury { width: 6px; height: 6px; top: -3px; margin-left: -3px; }
    .venus { width: 10px; height: 10px; top: -5px; margin-left: -5px; }
    .earth { width: 12px; height: 12px; top: -6px; margin-left: -6px; }
    .mars { width: 8px; height: 8px; top: -4px; margin-left: -4px; }
    .jupiter { width: 18px; height: 18px; top: -9px; margin-left: -9px; }
    .saturn { width: 15px; height: 15px; top: -7.5px; margin-left: -7.5px; }
}
</style>
