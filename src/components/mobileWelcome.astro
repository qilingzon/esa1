---
/**
 * 手机端首页全屏欢迎界面
 * 类似手机锁屏，向上滑动后消失显示内容
 */
import { siteConfig } from "@/config";

const title = siteConfig.wallpaper.banner?.homeText?.title || siteConfig.title;
const subtitle = siteConfig.wallpaper.banner?.homeText?.subtitle;
const subtitleText = Array.isArray(subtitle) ? subtitle[0] : subtitle;
---

<div id="mobile-welcome" class="mobile-welcome-screen lg:hidden">
    <div class="welcome-content">
        <h1 class="welcome-title">{title}</h1>
        {subtitleText && <p class="welcome-subtitle">{subtitleText}</p>}
        <div class="swipe-hint">
            <span>向上滑动</span>
            <div class="swipe-arrow"></div>
        </div>
    </div>
</div>

<style>
    .mobile-welcome-screen {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 9999;
        background: linear-gradient(135deg, 
            oklch(0.7 0.15 var(--hue)) 0%, 
            oklch(0.5 0.2 var(--hue)) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                    opacity 0.3s ease-out;
        will-change: transform, opacity;
        touch-action: pan-y;
    }
    
    .mobile-welcome-screen.hiding {
        transform: translateY(-100%);
        opacity: 0;
    }
    
    .mobile-welcome-screen.hidden {
        display: none;
    }
    
    .welcome-content {
        text-align: center;
        color: white;
        padding: 2rem;
    }
    
    .welcome-title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
        animation: fadeInUp 0.8s ease-out;
    }
    
    .welcome-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 3rem;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }
    
    .swipe-hint {
        position: absolute;
        bottom: 4rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }
    
    .swipe-hint span {
        font-size: 0.9rem;
        opacity: 0.8;
        margin-bottom: 0.5rem;
    }
    
    .swipe-arrow {
        width: 24px;
        height: 24px;
        border-left: 2px solid rgba(255, 255, 255, 0.8);
        border-top: 2px solid rgba(255, 255, 255, 0.8);
        transform: rotate(45deg);
        animation: bounceUp 1.5s infinite;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @keyframes bounceUp {
        0%, 100% {
            transform: translateY(0) rotate(45deg);
        }
        50% {
            transform: translateY(-10px) rotate(45deg);
        }
    }
</style>

<script>
    function initMobileWelcome() {
        const welcome = document.getElementById('mobile-welcome');
        if (!welcome) return;
        
        // 检查是否已经看过欢迎界面（本次会话）
        if (sessionStorage.getItem('welcomeShown')) {
            welcome.classList.add('hidden');
            return;
        }
        
        // 检查是否是桌面端
        if (window.innerWidth >= 1024) {
            welcome.classList.add('hidden');
            return;
        }
        
        let startY = 0;
        let currentY = 0;
        let isDragging = false;
        
        // 触摸开始
        welcome.addEventListener('touchstart', (e) => {
            startY = e.touches[0].clientY;
            isDragging = true;
            welcome.style.transition = 'none';
        }, { passive: true });
        
        // 触摸移动
        welcome.addEventListener('touchmove', (e) => {
            if (!isDragging) return;
            
            currentY = e.touches[0].clientY;
            const diff = startY - currentY;
            
            // 只允许向上滑动
            if (diff > 0) {
                const translateY = Math.min(diff, window.innerHeight);
                const opacity = 1 - (translateY / window.innerHeight);
                welcome.style.transform = `translateY(-${translateY}px)`;
                welcome.style.opacity = opacity.toString();
            }
        }, { passive: true });
        
        // 触摸结束
        welcome.addEventListener('touchend', () => {
            if (!isDragging) return;
            isDragging = false;
            
            const diff = startY - currentY;
            welcome.style.transition = 'transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease-out';
            
            // 如果滑动超过 100px，则隐藏欢迎界面
            if (diff > 100) {
                welcome.classList.add('hiding');
                sessionStorage.setItem('welcomeShown', 'true');
                
                setTimeout(() => {
                    welcome.classList.add('hidden');
                }, 400);
            } else {
                // 否则恢复原位
                welcome.style.transform = '';
                welcome.style.opacity = '';
            }
        }, { passive: true });
        
        // 点击也可以关闭
        welcome.addEventListener('click', () => {
            welcome.style.transition = 'transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease-out';
            welcome.classList.add('hiding');
            sessionStorage.setItem('welcomeShown', 'true');
            
            setTimeout(() => {
                welcome.classList.add('hidden');
            }, 400);
        });
    }
    
    // 页面加载后初始化
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMobileWelcome);
    } else {
        initMobileWelcome();
    }
</script>
